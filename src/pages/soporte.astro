---
import Header from "../components/Header.astro";
import Footer from "../components/Header.astro";

const pageTitle = "Soporte";
const loginPage = true;
---

<style>
	.login-container {
		background-color: rgba(255, 255, 255, 0.1);
	}

    .btn-return {
        left: 90%;
        top: 4%;
    }
</style>

<Header pageTitle={pageTitle} loginPage={loginPage} />

<div class="login-container relative border-0 drop-shadow-lg w-3/4 h-1/2 rounded-lg p-5 md:w-1/2">
	<div>
		<div class="mb-7 mt-7">
			<img class="w-14 m-auto" src="../../public/images/whatsapp.png" alt="">
		</div>
		<div class="mb-7">
			<h3 class="text-xl md:text-2xl text-white text-center">Contactando a soporte</h3>
		</div>
		<div class="mb-5">
			<form class="w-full lg:w-3/2 m-auto text-center">
				<input type="text" class="w-3/4 mb-3 p-1 rounded-sm placeholder:text-sm placeholder:px-2" placeholder="Ingresa tu correo electronico" autocomplete="off">
				<textarea name="" id="" class="w-3/4 h-32 placeholder:text-sm placeholder:p-2" placeholder="Escribre tu problema"></textarea>
				<button class="block w-3/4 m-auto p-1 rounded-sm bg-green-600 text-white border-0 mb-5 text-sm">Enviar</button>
				<a href="/" class="text-white absolute btn-return">X</a>
			</form>
		</div>
	</div>
</div>

<Footer />
